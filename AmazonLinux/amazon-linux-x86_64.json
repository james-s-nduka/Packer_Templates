{
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-2",
    "source_ami": "ami-6d1c2007",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "vpc_id": "vpc-e1947788",
    "subnet_id": "subnet-e5717d9d",
    "ami_name": "tesco-amazon-linux {{timestamp}}",
    "ssh_pty": "true",
    "tags": {
      "Name": "Standard AMI",
      "OS_Version": "Amazon",
      "Release": "1.0.0"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -S -E sh '{{ .Path }}'",
    "scripts": [
        "AmazonLinux/scripts/03provision.sh"
    ]
  }] 
}
